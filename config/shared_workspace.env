# PoliTerm Configuration - SHARED WORKSPACE
# Both PLANNER and EXECUTER work in the SAME directory for context sharing

# CRITICAL: Use the SAME working directory for both TUIs
export PROJECT_DIR="${PROJECT_DIR:-$(pwd)}"  # Default to current directory

# Both TUIs start in the SAME directory
export PLANNER_CWD="$PROJECT_DIR"
export EXECUTER_CWD="$PROJECT_DIR"  # SAME AS PLANNER!

# TUI Commands
export PLANNER_CMD="${PLANNER_CMD:-claude}"
export EXECUTER_CMD="${EXECUTER_CMD:-codex}"

# Alternative: If you want to specify a project directory
# export PROJECT_DIR="$HOME/Projects/my-project"
# export PLANNER_CWD="$PROJECT_DIR"
# export EXECUTER_CWD="$PROJECT_DIR"

# tmux Configuration
export POLI_TMUX_SOCKET="poli"
export POLI_TMUX_SESSION="main"

# Timeouts for continuous dialogue
export POLI_PLAN_TIMEOUT=300    # 5 minutes
export POLI_EXEC_TIMEOUT=900    # 15 minutes
export POLI_POLL_INTERVAL=0.4

# Logging
export POLI_LOG_LEVEL="INFO"
export POLI_LOG_FILE="logs/poli_orchestrator.log"

# Buffer Configuration
export POLI_CAPTURE_LINES=400

# Max dialogue rounds
export POLI_MAX_ROUNDS=20