# PoliTerm Configuration for Real AI CLIs
# Bu dosyayı source edin: source config/real_cli.env

# PLANNER olarak Claude kullan
export PLANNER_CMD="claude"
export PLANNER_CWD="$HOME/Projects/planner_workspace"

# EXECUTER olarak Codex kullan
export EXECUTER_CMD="codex"
export EXECUTER_CWD="$HOME/Projects/executer_workspace"

# Alternatif kombinasyonlar:
# -----------------------------
# İki Claude instance:
# export PLANNER_CMD="claude"
# export EXECUTER_CMD="claude"

# Claude planner, Aider executer (eğer aider kurarsanız):
# export PLANNER_CMD="claude"
# export EXECUTER_CMD="aider"

# tmux Configuration
export POLI_TMUX_SOCKET="poli"
export POLI_TMUX_SESSION="main"

# Timeout Configuration (gerçek CLI'lar için daha uzun)
export POLI_PLAN_TIMEOUT=300    # 5 dakika
export POLI_EXEC_TIMEOUT=1800   # 30 dakika

# Logging
export POLI_LOG_LEVEL="INFO"
export POLI_LOG_FILE="logs/real_cli_session.log"