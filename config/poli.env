# PoliTerm Orchestrator Configuration
# Source this file before running scripts: source config/poli.env

# TUI Commands
export PLANNER_CMD="claude"
export EXECUTER_CMD="codex"

# Working Directories
export PLANNER_CWD="$HOME/Workspace/ProjA"
export EXECUTER_CWD="$HOME/Workspace/ProjB"

# tmux Configuration
export POLI_TMUX_SOCKET="poli"
export POLI_TMUX_SESSION="main"

# Timeout Configuration (seconds)
export POLI_PLAN_TIMEOUT=180    # 3 minutes for planner to respond
export POLI_EXEC_TIMEOUT=900    # 15 minutes for executer to complete
export POLI_POLL_INTERVAL=0.4   # Polling interval for checking output

# Logging
export POLI_LOG_LEVEL="INFO"    # DEBUG, INFO, WARNING, ERROR
export POLI_LOG_FILE="logs/poli_orchestrator.log"

# Buffer Configuration
export POLI_CAPTURE_LINES=400    # Number of lines to capture from pane tail

# Retry Configuration
export POLI_MAX_RETRIES=3
export POLI_RETRY_DELAY=2       # Seconds between retries

# Development Mode
export POLI_DEBUG=0              # Set to 1 for debug mode
export POLI_DRY_RUN=0           # Set to 1 to simulate without actual TUIs